{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="row">
    <form action="{{ path("fos_user_security_check") }}" method="post" class="col s12">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="row">
            <div class="input-field col s6">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="validate">
                <label for="username">{{ 'security.login.username'|trans }}</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input type="password" id="password" name="_password" required="required"  class="validate">
                <label for="password">{{ 'security.login.password'|trans }}</label>
            </div>
        </div>
        <p>
            <input type="checkbox" class="filled-in" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </p>
        <input type="submit" id="_submit" name="_submit" class="btn waves-effect waves-light" value="{{ 'security.login.submit'|trans }}" />
    </form>
</div>
